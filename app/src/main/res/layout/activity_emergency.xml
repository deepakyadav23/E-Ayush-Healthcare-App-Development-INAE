<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akhil.e_ayush.Activities.EmergencyActivity">

    <android.support.v7.widget.RecyclerView
        android:clipChildren="false"
        android:visibility="gone"
        android:clipToPadding="false"
        android:background="@color/wht_grd_next"
        android:layout_marginTop="10dp"
        android:id="@+id/emergency_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/emergency_progressbar"
        android:layout_gravity="center"
        android:background="@color/bloodColor"
        />

</FrameLayout>
