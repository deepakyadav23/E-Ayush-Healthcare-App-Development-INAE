                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="List of all blood banks"
                            android:textColor="@color/black"
                            android:textSize="@dimen/hint_size"
                            android:textStyle="italic" />
                    </LinearLayout>
                </LinearLayout>
