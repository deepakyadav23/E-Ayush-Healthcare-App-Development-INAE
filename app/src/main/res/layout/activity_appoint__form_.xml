<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akhil.e_ayush.Activities.Appoint_Form_Activity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/bookanappointment"/>
        <TextView
            android:id="@+id/form_hospitalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital Name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preffered Doctor"
                android:layout_gravity="center"
                android:textSize="@dimen/btn"
                android:layout_margin="10dp"/>
        <Spinner
            android:id="@+id/form_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialization"
                android:layout_gravity="center"
                android:textSize="@dimen/btn"
                android:layout_margin="10dp"/>
            <Spinner
                android:id="@+id/form_spinner_specialization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
        <Button
            android:background="@drawable/light_btn"
            android:id="@+id/form_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="Date"
            android:layout_margin="10dp"/>
        <Button
            android:background="@drawable/light_btn"
            android:id="@+id/form_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="Time"
            android:layout_margin="10dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/form_book"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment"
            android:background="@drawable/confirm_btn"
            android:layout_gravity="center"
            />
    </LinearLayout>
</ScrollView>
